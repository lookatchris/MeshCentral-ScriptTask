{
  "name": "ScriptTask Enhanced",
  "description": "Advanced scripting, scheduling, and remediation for MeshCentral",
  "version": "2.0.0",
  "meshCentralCompat": ">=1.0.0",
  "apiServer": {
    "enabled": true,
    "port": 8081,
    "cors": true,
    "allowedOrigins": ["http://localhost:8081", "http://localhost:5173"]
  },
  "scheduler": {
    "enabled": true,
    "defaultTimezone": "UTC",
    "maxConcurrentJobs": 50,
    "checkIntervalSeconds": 30
  },
  "remediation": {
    "enabled": true,
    "defaultTimeout": 300,
    "maxRetries": 3,
    "exponentialBackoff": true
  },
  "webUI": {
    "enabled": true,
    "path": "/webapp/dist"
  },
  "security": {
    "jwtExpiresIn": "24h",
    "rateLimitWindowMs": 900000,
    "rateLimitMaxRequests": 100
  },
  "logging": {
    "level": "info",
    "enableRequestLogging": true
  }
}
